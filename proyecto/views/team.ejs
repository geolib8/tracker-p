<!DOCTYPE html>
<html lang="es" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/team.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>
  <div class="sidebar">
    <div class="logo-details">
      <i class='side-t'>T</i>
      <span class="logo_name">Tracker Dog</span>
    </div>
    <ul class="nav-links">
      <li>
        <a href="/" class="active">
          <i class='bx bxs-dashboard' ></i>
          <span class="links_name">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/errors">
          <i class='bx bx-box' ></i>
          <span class="links_name">Errors</span>
        </a>
      </li>
      <li>
        <a href="/team">
          <i class='bx bx-user' ></i>
          <span class="links_name">Team</span>
        </a>
      </li>
      <li>
        <a href="/messages">
          <i class='bx bx-message' ></i>
          <span class="links_name">Messages</span>
        </a>
      </li>
      <li>
        <a href="/settings">
          <i class='bx bx-cog' ></i>
          <span class="links_name">Settings</span>
        </a>
      </li>
      <li class="log_out">
        <a href="/login">
          <i class='bx bx-log-out'></i>
          <span class="links_name">Log out</span>
        </a>
      </li>
    </ul>
  </div>
  <section class="home-section">
    <nav>
      <div class="sidebar-button">
        <i class='bx bx-menu sidebarBtn'></i>
        <span class="dashboard">Team</span>
      </div>
      <div class="search-box">
        <input type="text" placeholder="Search...">
        <i class='bx bx-search' ></i>
      </div>
      <div class="profile-details">
        <span class="admin_name">Jesús Alcalá</span>
        <i class='bx bx-chevron-down'></i>
      </div>
    </nav>

    <div class="home-content">
      <div class="overview-boxes">
        <div class="box">
          <div class="right-side">
            <div class="box-topic">Team "Name"</div>
            <div class="number">Alonso</div>
           <!-- <div class="indicator">
              <i class='bx bx-up-arrow-alt'></i>
              <span class="text">lorem ipsum</span>-->
              <a href="/newTeammate" class="active">
                <i class='bx bx-user-plus chart' ></i>
              </a>
              <% if(posts.length == 0) { %>

                <h2>There are no Posts</h2>
              <% } else { for(let i =0; i< posts.length;i++)  {    %>
                

                <div class="blog-post">
                 <!-- <h2 class="blog-post-title"><%= posts[i].name  %> </h2>
                  <p class="blog-post-meta"><%= posts[i].post_date.toDateString()  %> by <a href="#"><%= posts[i].author  %></a>     </p>
                  <p><%= posts[i].post_data  %></p>-->
                  <h2 class="blog-post-title"><%= posts[i].title  %> </h2>
                  <span><a class = "btn btn-danger" href ="/delete/<%= posts[i]._id  %>"></a></span>
                  <span><a class = "btn btn-info" href ="/edit/<%= posts[i]._id  %>"></a></span>
                </div>
        
                <% }}  %>
            </div>
          </div>
          <!--<a href="/home"><i class='bx bx-user-plus chart'></i></a>-->

    
        </div>
      </div>
    </div>   

  </section>
  <script src="js/team.js"></script>
</body>
</html>

